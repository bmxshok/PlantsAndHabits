<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Мой сад"
        android:textSize="24sp"
        android:textColor="@color/dark_green"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:background="@drawable/bg_tab_selector"
        android:padding="4dp">

        <Button
            android:id="@+id/btnPlants"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Растения"
            android:textColor="@color/dark_green"
            android:background="@drawable/bg_tab_selected"
            style="@style/NoTintButton"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnReminders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Напоминания"
            android:textColor="@color/dark_green"
            android:background="@drawable/bg_tab_unselected"
            style="@style/NoTintButton"
            android:textAllCaps="false" />

    </LinearLayout>

    <Button
        android:id="@+id/btnGoToDirectory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить растение"
        android:background="@drawable/bg_green_rounded"
        android:textColor="@color/dark_green"
        style="@style/NoTintButton"
        android:layout_marginBottom="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPlants"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:scrollbars="vertical" />

</LinearLayout>