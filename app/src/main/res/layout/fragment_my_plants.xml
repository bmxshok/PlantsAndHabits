<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Мой сад"
        android:textColor="@color/dark_green"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_tab_selector"
        android:padding="2dp">

        <Button
            android:id="@+id/btnPlants"
            style="@style/NoTintButton"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:background="@drawable/bg_tab_selected"
            android:minHeight="32dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:text="Растения"
            android:textAllCaps="false"
            android:textColor="@color/dark_green"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnReminders"
            style="@style/NoTintButton"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:background="@drawable/bg_tab_unselected"
            android:minHeight="32dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:text="Напоминания"
            android:textAllCaps="false"
            android:textColor="@color/dark_green"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnAddAction"
        style="@style/NoTintButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_green_rounded"
        android:text="Добавить растение"
        android:textColor="@color/dark_green"
        android:textSize="18sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPlants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:scrollbars="vertical" />

        <!-- Пустое состояние -->
        <include
            android:id="@+id/emptyState"
            layout="@layout/empty_state_my_plants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/containerContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>