<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Toolbar -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="@string/back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Мое растение"
            android:textColor="@color/dark_green"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Изображение растения -->
    <ImageView
        android:id="@+id/imgPlant"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_category"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Блок с информацией (скругленный сверху) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/imgPlant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_top_background"
            android:padding="24dp">

            <!-- Название растения в блоке -->
            <TextView
                android:id="@+id/tvPlantNameDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Моя Диффенбахия"
                android:textColor="@color/dark_green"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Научное название -->
            <TextView
                android:id="@+id/tvScientificName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Diefrenbachia"
                android:textColor="@color/dark_green"
                android:textSize="16sp"
                android:textStyle="italic"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvPlantNameDetail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/llActionButtons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tvScientificName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Кнопка "Редактировать" -->
                <Button
                    android:id="@+id/btnEditPlant"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_dark_green_rounded"
                    android:text="Редактировать"
                    android:textColor="@color/white"
                    style="@style/NoTintButton" />

                <!-- Кнопка "Удалить" -->
                <Button
                    android:id="@+id/btnDeletePlant"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_green_rounded"
                    android:text="Удалить"
                    android:textColor="@color/white"
                    style="@style/NoTintButton" />

            </LinearLayout>

            <!-- Разделитель -->
            <View
                android:id="@+id/divider1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@id/llActionButtons"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Подраздел "Описание" -->
            <TextView
                android:id="@+id/tvDescriptionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Описание"
                android:textColor="@color/dark_green"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/divider1"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Текст описания -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Диффенбахия (Diefrenbachia) - это популярное комнатное растение с красивыми листьями, относящееся к декоративно-лиственным.\n\nВнешний вид:\n• Диффенбахия известна своими крупными, овальными листьями с разнообразными зелеными и кремовыми узорами.\n• Это растение может расти до высоты около 1,5 метра в домашних условиях."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvDescriptionTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Разделитель -->
            <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@id/tvDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Подраздел "Советы по уходу" -->
            <TextView
                android:id="@+id/tvCareTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Советы по уходу"
                android:textColor="@color/dark_green"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/divider2"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Текст советов по уходу -->
            <TextView
                android:id="@+id/tvCareTips"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Уход в домашних условиях:\n• Освещение: Яркий рассеянный свет\n• Полив: Умеренный, не допускать переувлажнения\n• Температура: 18-25°C\n• Влажность: Высокая, рекомендуется опрыскивание\n• Подкормка: Раз в 2 недели в период роста"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvCareTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Разделитель -->
            <View
                android:id="@+id/divider3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@id/tvCareTips"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Фотогалерея: Заголовок -->
            <TextView
                android:id="@+id/tvGalleryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Фотогалерея"
                android:textColor="@color/dark_green"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/divider3"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Кнопки действий фотогалереи -->
            <LinearLayout
                android:id="@+id/llGalleryActions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tvGalleryTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Кнопка "Добавить фото" -->
                <Button
                    android:id="@+id/btnAddPhoto"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_green_rounded"
                    android:text="Добавить фото"
                    android:textColor="@color/white"
                    style="@style/NoTintButton" />

                <!-- Кнопка "Создать таймлапс" -->
                <Button
                    android:id="@+id/btnCreateTimelapse"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_dark_green_rounded"
                    android:text="Создать таймлапс"
                    android:textColor="@color/white"
                    style="@style/NoTintButton" />

            </LinearLayout>

            <!-- RecyclerView для фотогалереи -->
            <TextView
                android:id="@+id/tvEmptyGallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Пока нет фотографий"
                android:textColor="@color/dark_green"
                android:textSize="16sp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/llGalleryActions"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvGallery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:clipToPadding="false"
                android:paddingHorizontal="8dp"
                app:layout_constraintTop_toBottomOf="@id/llGalleryActions"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>