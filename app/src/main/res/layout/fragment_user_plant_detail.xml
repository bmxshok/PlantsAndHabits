<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Toolbar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="@string/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Мое растение"
            android:textColor="@color/dark_green"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintEnd_toStartOf="@id/btnDeletePlant"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/btnDeletePlant"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_delete"
            android:contentDescription="Удалить растение"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/dark_green" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Изображение растения -->
    <ImageView
        android:id="@+id/imgPlant"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_category"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Блок с информацией (скругленный сверху) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/imgPlant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_top_background"
            android:padding="24dp">

            <!-- Заголовок с названием (по центру) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/tvPlantNameDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Моя Диффенбахия"
                    android:textColor="@color/dark_green"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvScientificName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Diefrenbachia"
                    android:textColor="@color/light_gray"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Кнопка "Редактировать" (по центру) -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp">

                <Button
                    android:id="@+id/btnEditPlant"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:minWidth="240dp"
                    android:background="@drawable/bg_dark_green_rounded"
                    android:text="Редактировать"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    style="@style/NoTintButton" />

            </FrameLayout>

            <!-- Разделитель -->
            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="24dp"
                android:background="@color/light_grey" />

            <!-- Секция "Описание" -->
            <LinearLayout
                android:id="@+id/sectionDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <!-- Заголовок секции с иконкой -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_description"
                        android:contentDescription="@string/plant_photo"
                        app:tint="@color/dark_green" />

                    <TextView
                        android:id="@+id/tvDescriptionTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Описание"
                        android:textColor="@color/dark_green"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Текст описания -->
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Диффенбахия (Diefrenbachia) - это популярное комнатное растение с красивыми листьями, относящееся к декоративно-лиственным.\n\nВнешний вид:\n• Диффенбахия известна своими крупными, овальными листьями с разнообразными зелеными и кремовыми узорами.\n• Это растение может расти до высоты около 1,5 метра в домашних условиях."
                    android:textColor="@color/medium_green"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:lineSpacingMultiplier="1.4"
                    android:lineSpacingExtra="6dp" />

            </LinearLayout>

            <!-- Разделитель -->
            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="24dp"
                android:background="@color/light_grey" />

            <!-- Секция "Советы по уходу" -->
            <LinearLayout
                android:id="@+id/sectionCareTips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <!-- Заголовок секции с иконкой -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_care_tips"
                        android:contentDescription="@string/plant_photo"
                        app:tint="@color/dark_green" />

                    <TextView
                        android:id="@+id/tvCareTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Советы по уходу"
                        android:textColor="@color/dark_green"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Текст советов по уходу -->
                <TextView
                    android:id="@+id/tvCareTips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Уход в домашних условиях:\n• Освещение: Яркий рассеянный свет\n• Полив: Умеренный, не допускать переувлажнения\n• Температура: 18-25°C\n• Влажность: Высокая, рекомендуется опрыскивание\n• Подкормка: Раз в 2 недели в период роста"
                    android:textColor="@color/medium_green"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:lineSpacingMultiplier="1.4"
                    android:lineSpacingExtra="6dp" />

            </LinearLayout>

            <!-- Разделитель -->
            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="24dp"
                android:background="@color/light_grey" />

            <!-- Фотогалерея: Заголовок -->
            <TextView
                android:id="@+id/tvGalleryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Фотогалерея"
                android:textColor="@color/dark_green"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Кнопки действий фотогалереи -->
            <LinearLayout
                android:id="@+id/llGalleryActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Кнопка "Добавить фото" -->
                <Button
                    android:id="@+id/btnAddPhoto"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_dark_green_rounded"
                    android:text="Добавить фото"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="8dp"
                    android:maxLines="2"
                    android:ellipsize="none"
                    style="@style/NoTintButton" />

                <!-- Кнопка "Создать таймлапс" -->
                <Button
                    android:id="@+id/btnCreateTimelapse"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_dark_green_rounded"
                    android:text="Создать таймлапс"
                    android:textColor="@color/white"
                    android:alpha="0.5"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="8dp"
                    android:maxLines="2"
                    android:ellipsize="none"
                    style="@style/NoTintButton" />

            </LinearLayout>

            <!-- RecyclerView для фотогалереи -->
            <TextView
                android:id="@+id/tvEmptyGallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:text="Пока нет фотографий"
                android:textColor="@color/dark_green"
                android:textSize="16sp"
                android:visibility="visible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvGallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:clipToPadding="false"
                android:paddingHorizontal="8dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
