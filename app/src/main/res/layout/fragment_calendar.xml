<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Календарь ухода"
        android:textSize="24sp"
        android:textColor="@color/dark_green"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Календарь -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginBottom="24dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Заголовок месяца и навигация -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvMonthYear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Нояб. 2025"
                    android:textSize="18sp"
                    android:layout_marginLeft="30px"
                    android:textColor="@color/dark_green"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/btnPrevMonth"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_back"
                    android:contentDescription="Предыдущий месяц"
                    app:tint="@color/dark_green" />

                <ImageView
                    android:id="@+id/btnNextMonth"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_forward"
                    android:contentDescription="Следующий месяц"
                    android:layout_marginStart="16dp"
                    app:tint="@color/dark_green" />

            </LinearLayout>

            <!-- Дни недели -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="П"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="В"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="С"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ч"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="П"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="С"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="В"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Сетка календаря -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCalendar"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Подзаголовок -->
    <TextView
        android:id="@+id/tvDateSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Список дел"
        android:textSize="18sp"
        android:textColor="@color/dark_green"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp" />

    <!-- Список задач на выбранную дату -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTasks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="8dp" />

</LinearLayout>
